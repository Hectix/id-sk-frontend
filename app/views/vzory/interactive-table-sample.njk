<!DOCTYPE html>
<html lang="sk">
<head>
    <title>Interaktívna tabuľka</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <meta name="title" content="Interaktívna tabuľka">
    <meta name="description" content="Príkladová tabuľka na demonštráciu koponentu - interaktívna mapa">

    <link rel="shortcut icon" sizes="16x16 32x32 48x48" href="/public/assets/images/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" sizes="180x180" href="/public/assets/images/apple-touch-icon-180x180.png">
    <link rel="apple-touch-icon" sizes="167x167" href="/public/assets/images/apple-touch-icon-167x167.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/public/assets/images/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" href="/public/assets/images/apple-touch-icon.png">
    
    <!--[if !IE 8]><!-->
        <link rel="stylesheet" href="/public/app.css">
    <!--<![endif]-->
    <!--[if IE 8]>
        <link rel="stylesheet" href="/public/app-ie8.css">
    <![endif]-->
    <!--[if lt IE 9]>
        <script src="/vendor/html5-shiv/html5shiv.js"></script>
    <![endif]-->

    <script src="/public/assets/js/d3.min.js"></script>
    
    <style>
        #content {
            font-family: "Source Sans Pro", "Arial", sans-serif;
            height: 100%;
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            overflow: auto;
        }

        table {
            width: 100%;
        }
        table tr {
            border-bottom: 1px solid govuk-colour("black");
            text-align: right;
        }

        table tr th .arrows:after {
            position: absolute;
            margin-left: 7px;
            margin-top: 11px;
            border-style: solid;
            border-width: 7px 6px 0;
            border-color: #000 transparent transparent;
            content: "";
            -webkit-transition: -webkit-transform 0.2s;
            transition: -webkit-transform 0.2s;
            transition: transform 0.2s;
            transition: transform 0.2s, -webkit-transform 0.2s;
        }

        table tr th .arrows:before {
            position: absolute;
            margin-top: 2px;
            border-style: solid;
            border-width: 7px 6px 0;
            border-color: #000 transparent transparent;
            transform: rotate(180deg);
            content: "";
            -webkit-transition: -webkit-transform 0.2s;
            transition: -webkit-transform 0.2s;
            transition: transform 0.2s;
            transition: transform 0.2s, -webkit-transform 0.2s;
            margin-left: 7px;
        }

        table tr th.des .arrows:before,
        table tr th.aes .arrows:after {
            display: none;
        }

        table tr:hover th .arrows:after,
        table tr:hover th .arrows:before {
            border-color: #fff transparent transparent;
        }

        table tr th,
        table tr td {
            font-size: 16px;
            padding: 10px 10px;
        }
        table tr td,
        table tr th {
            text-align: left;
        }
        table tr:hover {
            background-color: #000000;
        }
        table tr:hover th,
        table tr:hover td {
            color: white;
        }
    </style>
</head>
<body>
    <main id="content"></main>
    <script>

        var $currentData = "";
        var $regionsMapping = {
            1: "Košický",
            2: "Nitriansky",
            3: "Bratislavský",
            4: "Trenčiansky",
            5: "Žilinský",
            6: "Banskobystrický",
            7: "Trnavský",
            8: "Prešovský"
        }

        var $columnsMapping = {
            "region_id": "Kraj",
            "dose1_count": "Δ 1. dávka	",
            "dose2_count": "Δ 2. dávka	",
            "dose1_sum": "Σ 1. dávka",
            "dose2_sum": "Σ 2. dávka",
            "published_on": "Deň"            
        }

        var $params = new URL(location.href).searchParams;
        var $indicator = $params.get("indicator");
        var $indicatorExclude = $indicator === "dose1" ? "dose2" : ($indicator === "dose2" ? "dose1" : "") 
        var $timePeriod = $params.get("time");

        var RenderCustomTable = function () {
            var $columns = Object.keys($currentData[0]);
            $columns.splice($columns.indexOf("id"), 1);
            $columns.splice($columns.indexOf("updated_at"), 1);
            $columns = $columns.filter(function($column){
                if ($indicatorExclude) {
                    return $column.indexOf($indicatorExclude) < 0
                }
                return $column
            })
            
            var $sortAscending = true;
		    var $table = d3.select("#content").append("table");
            var $headers = $table.append("thead").append("tr")
                .selectAll("th")
                .data($columns).enter()
                .append("th")
                .attr("data-th", function (d) {
                    return d;
                })
                .text(function (d) {
                    return $columnsMapping[d];
                })
                .on("click", function (d) {
                    var $target = d.target || d.srcElement
                    var $key = $target.dataset.th
                    if ($sortAscending) {
                        $rows.sort(function(a, b) { return d3.ascending(b[$key], a[$key]); });
                        $sortAscending = false;
                        this.className = "aes";
                    } else {
                        $rows.sort(function(a, b) { return d3.descending(b[$key], a[$key]); });
                        $sortAscending = true;
                        this.className = "des";
                    }
                })
                .append("span")
                .attr("class", "arrows")


            var $rows = $table.append("tbody").selectAll("tr")
                .data($currentData).enter()
                .append("tr");
     
            $rows.selectAll("td")
                .data(function (d) {
                    return $columns.map(function (k) {
                        var $value = k === "region_id" ? $regionsMapping[d[k]] : d[k];
                        return { "value": $value, "name": k};
                    });
                }).enter()
                .append("td")
                .attr("data-th", function (d) {
                    return d.name;
                })
                .text(function (d) {
                    return d.value;
                });

        }

        var renderTable = function(){
            d3.json("/public/assets/data/vaccinations-by-region.json").then(function (data) {
                $currentData = data.page;
                if (Number($timePeriod)) {
                    var $cutoffDate = new Date();
                    $cutoffDate.setDate($cutoffDate.getDate() - Number($timePeriod));
                    $currentData = $currentData.filter(function(d) {
                        var $date = new Date(d["published_on"])
                        return $date > $cutoffDate;
                    })
                }
                RenderCustomTable();
            }) 
        }

        if (document.readyState === "complete" || document.readyState === "interactive") {
            renderTable();
        } else {
            document.addEventListener("DOMContentLoaded", function() {
                renderTable();
            });
        }
    </script>

</body>
</html>
